<section class="vh-100" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card rounded-3">
          <div class="card-body p-4">

            <%= content_tag :div, class: "alert alert-info", id: "notice" do -%>
              <%= notice %>
            <% end if notice.present? -%>

            <% if @task.errors.any? %>
              <% @task.errors.full_messages.each do |message| %>
                <%= content_tag :div, class: "alert alert-danger", role: 'alert' do -%>
                  <%= message %>
                <% end -%>
              <% end %>
            <% end %>

            <h4 class="text-center my-3 pb-3">To Do App</h4>
            <div class="row row-cols-lg-auto g-3 justify-content-center align-items-center mb-4 pb-2">
              <%= button_to "Tasks list", tasks_path, method: :get, class: "btn btn-info" %>
            </div>

            <%= form_with(model: @task, local: true) do |form| %>
              <div class="p-4 bg-light rounded">
                <div class="form-group">
                  <%= form.label :title, class: 'bmd-label-floating' %>
                  <%= form.text_field :title, class: 'form-control' %>
                </div>

                <div class="form-group">
                  <%= form.label :description, class: 'bmd-label-floating' %>
                  <%= form.text_area :description, class: 'form-control' %>
                </div>

                <div class="form-group">
                  <%= form.label :deadline, class: 'bmd-label-floating' %>
                  <%= form.datetime_field :deadline, class: 'form-control' %>
                </div>

                <%= form.submit 'Create Task', class: 'btn btn-raised btn-info mt-3' %>

              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
